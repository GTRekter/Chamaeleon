<Window x:Class="TplWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<UniformGrid Grid.Row="0" Rows="4">
			<TextBox Name="textBox1" IsReadOnly="True" />
			<TextBox Name="textBox2" IsReadOnly="True" />
			<TextBox Name="textBox3" IsReadOnly="True" />
			<TextBox Name="textBox4" IsReadOnly="True" />
			<TextBox Name="textBox5" IsReadOnly="True" />
			<TextBox Name="textBox6" IsReadOnly="True" />
            <TextBox Name="textBox7" IsReadOnly="True" />
            <TextBox Name="textBox8" IsReadOnly="True" />
            <TextBox Name="textBox9" IsReadOnly="True" />
            <TextBox Name="textBox10" IsReadOnly="True" />
            <TextBox Name="textBox11" IsReadOnly="True" />
            <TextBox Name="textBox12" IsReadOnly="True" />
        </UniformGrid>
		
		
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Name="goButton" Width="80" Height="25" Content="Go" Margin="4" Click="goButton_Click" />
			<Button Name="cancelButton" Width="80" Height="25" Content="Cancel" Margin="4" Click="cancelButton_Click" />
		</StackPanel>
		
	</Grid>
</Window>
